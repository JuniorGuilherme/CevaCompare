<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cerveja1"
    android:contentDescription="Foto de wallpaper do app. Dois copos de cerveja sobre um banco rustico, cheios, com um dedo de colarinho, e um ramo de cevada atras."
    android:orientation="vertical"
    tools:context="com.example.notebookdell.cevacompare.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTelaCotacao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:height="100sp"
            android:contentDescription="Botão para acessar tela para adicionar valor de uma cerveja."
            android:elevation="9dp"
            android:text="@string/adicionar_cerveja"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTelaLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="100sp"
            android:contentDescription="Botão para acessar tela de listagem de cervejas."
            android:text="@string/listar_cervejas" />
    </LinearLayout>


</LinearLayout>

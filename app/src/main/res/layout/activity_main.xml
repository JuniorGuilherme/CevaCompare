<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cerveja1"
    android:orientation="vertical"
    tools:context="com.example.notebookdell.cevacompare.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="150sp">

        <Button
            android:id="@+id/btnTelaCotacao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:height="100sp"
            android:elevation="9dp"
            android:text="Adicionar Cotação"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50sp">

        <Button
            android:id="@+id/btnTelaLista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="100sp"
            android:text="Lista de Cervejas" />
    </LinearLayout>


</LinearLayout>
